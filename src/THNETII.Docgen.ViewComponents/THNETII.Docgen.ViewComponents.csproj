<Project Sdk="Microsoft.NET.Sdk.Razor">

  <PropertyGroup>
    <OutputType>Library</OutputType>
    <TargetFramework>netstandard2.0</TargetFramework>
    <IsPackable>true</IsPackable>
    <AddRazorSupportForMvc>true</AddRazorSupportForMvc>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.2.0" />
    <PackageReference Include="Microsoft.Extensions.FileProviders.Embedded" Version="3.1.3" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Include="Images/**/*.*" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Web.LibraryManager.Build" Version="2.0.96">
      <PrivateAssets>All</PrivateAssets>
    </PackageReference>
    <Compile Remove="Internal\System\**" />
    <Content Remove="Internal\System\**" />
    <Content Remove="libman.json;wwwroot/lib/**/*.*" />
    <None Include="libman.json;wwwroot/lib/**/*.*" />
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Remove="Internal\System\**" />
    <None Remove="Internal\System\**" />
  </ItemGroup>

</Project>
